<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MinhasCompras.Views.NovoProduto"
             Title="Novo Produto">

    <ContentPage.ToolbarItems>

        <ToolbarItem Text="Salvar" Clicked="ToolbarItem_Clicked"/>

    </ContentPage.ToolbarItems>

    <VerticalStackLayout>

        <Label Text="Descricao do Produto: "/>
        <Entry x:Name="txt_descricao"/>

        <Label Text="Quantidade: "/>
        <Entry x:Name="txt_quantidade" Keyboard="Numeric"/>

        <Label Text="Preco: "/>
        <Entry x:Name="txt_preco" Keyboard="Numeric"/>
        
        <Label Text="Desconto: "/>
        <Entry x:Name="txt_desconto" Keyboard="Numeric"/>
    </VerticalStackLayout>
</ContentPage>